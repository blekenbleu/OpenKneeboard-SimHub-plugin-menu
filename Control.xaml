<UserControl x:Class="blekenbleu.OpenKneeboard_SimHub_plugin_menu.Control"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:blekenbleu.OpenKneeboard_SimHub_plugin_menu"
		mc:Ignorable="d"
		Width="480" HorizontalAlignment="Left" VerticalAlignment="Top">
	<Grid Margin="50,10,0,0" HorizontalAlignment="Left">
		<StackPanel VerticalAlignment="Top">
		<StackPanel Orientation="Horizontal">
			<TextBlock x:Name="SHlabel" FontSize="13" FontWeight="Bold" Height="20" Width="240">
				<Hyperlink RequestNavigate="Hyperlink_RequestNavigate"
				NavigateUri="http://localhost:8765/">OpenKneeboard-SimHub-plugin-menu</Hyperlink>
			</TextBlock>
			<TextBlock x:Name="Changed" Text="changed" Height="20" Width="48" Margin="5,0,0,0"
				Visibility="{Binding ChangedVisibility}" Background="Blue"/>
			<TextBlock Background="White" TextAlignment="Center" Height="20" Width="30" Margin="5,0,0,0">
				<Hyperlink RequestNavigate="Hyperlink_RequestNavigate"
				NavigateUri="https://github.com/blekenbleu/OpenKneeboard-SimHub-plugin-menu/wiki">Help</Hyperlink>
			</TextBlock>
		</StackPanel>

		<TextBlock x:Name="Status" Text="{Binding StatusText}" Height="74" Width="350"
			Background="DarkSlateGray" 	TextWrapping="Wrap" HorizontalAlignment="Left"/>
		<StackPanel Orientation="Horizontal">
		<Button x:Name="b0" Content=" Up " Height="40" Click="Prior_Click"
				Visibility="{Binding ButtonVisibility}" Margin="10,0,0,0"/>
		<Button x:Name="b1" Content="Down" Height="40" Click="Next_Click"
				Visibility="{Binding ButtonVisibility}" Margin="10,0,0,0"/>
		<Button x:Name="b2" Content=" + " Height="40" Click="Inc_Click"
				Visibility="{Binding ButtonVisibility}" Margin="10,0,0,0"/>
		<Button x:Name="b3" Content=" - " Height="40" Click="Dec_Click"
				Visibility="{Binding ButtonVisibility}" Margin="10,0,0,0"/>
		<Button x:Name="b4" Content="Swap All&#xA;w/Previous" Height="40"
				Click="Swap_Click" Visibility="{Binding ButtonVisibility}" Margin="10,0,0,0"/>
		<Button x:Name="b5" Content="Current&#xA;-&gt;Default" Height="40"
				Click="Def_Click" Visibility="{Binding ButtonVisibility}" Margin="10,0,0,0"/>
		</StackPanel>

		<StackPanel Orientation="Horizontal">
			<Slider Maximum="100" Minimum="0" TickPlacement="BottomRight" TickFrequency="3"
				Name="SL" Value="{Binding SliderValue}" Width="250" Height="20"
				PreviewMouseUp="Slider_DragCompleted" Visibility="{Binding SliderVisibility}"/>
			<Button x:Name="SB" Content="{Binding SliderProperty}" Width="140" Height="22"
				Click="Slider_Click" Visibility="{Binding SliderVisibility}" Background="Green"/>
		</StackPanel>

		<!-- Control.xaml.cs Control() binds dg to OKSHmenu.cs List<Values> simValues -->
		<DataGrid x:Name="dg" ItemsSource="{Binding}" AutoGenerateColumns="False" IsReadOnly="True"
				SelectionUnit="Cell" SelectionMode="Single" Loaded="DgSelect"
				CanUserAddRows="False" CanUserSortColumns="False" Width="316">
			<DataGrid.CellStyle>
				<Style TargetType="{x:Type DataGridCell}">
					<Setter Property="IsHitTestVisible" Value="False"/>
					<Style.Triggers>
						<Trigger Property="IsSelected" Value="True">
							<Setter Property="Background" Value="Red"/>
						</Trigger>
					</Style.Triggers>
				</Style>
			</DataGrid.CellStyle>
			<DataGrid.Columns>
				<DataGridTextColumn Header="Property" Binding="{Binding Name}"/>
				<DataGridTextColumn Header="Current" Binding="{Binding Current}">
					<DataGridTextColumn.ElementStyle>
						<Style TargetType="{x:Type TextBlock}">
							<Setter Property="HorizontalAlignment" Value="Center" />
						</Style>
					</DataGridTextColumn.ElementStyle>
				</DataGridTextColumn>
				<DataGridTextColumn Header="Previous" Binding="{Binding Previous}">
					<DataGridTextColumn.ElementStyle>
						<Style TargetType="{x:Type TextBlock}">
							<Setter Property="HorizontalAlignment" Value="Center" />
						</Style>
					</DataGridTextColumn.ElementStyle>
				</DataGridTextColumn>
				<DataGridTextColumn Header="Default" Binding="{Binding Default}">
					<DataGridTextColumn.ElementStyle>
						<Style TargetType="{x:Type TextBlock}">
							<Setter Property="HorizontalAlignment" Value="Center" />
						</Style>
					</DataGridTextColumn.ElementStyle>
				</DataGridTextColumn>
			</DataGrid.Columns>
		</DataGrid>
		</StackPanel>
	</Grid>
</UserControl>
